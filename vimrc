execute pathogen#infect()

syntax on
filetype plugin indent on

set background=dark
colorscheme solarized

set nu
set ts=4
set sw=4
set expandtab

map <F2> :NERDTreeTabsToggle
map <C-j> <C-w><C-]><C-w>T

nnoremap j gj
nnoremap k gk

nmap gh <C-w>h
nmap gj <C-w>j
nmap gk <C-w>k
nmap gl <C-w>l

nmap <C-l> gt
nmap <C-h> gT
